{
  "hosting": {
    "predeploy": ["npm run --prefix client build"],
    "public": "client/out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/app/**",
        "function": "app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },

  "emulators": {
    "functions": {
      "port": 5000
    },
    "firestore": {
      "port": 4000
    },
    "ui": {
      "enabled": true
    }
  }
}
